<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="hintText" parent="android:TextAppearance">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="btmNavFont">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="customRadio">
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/selectable_text_color_checked_state</item>
        <item name="android:background">@drawable/selectable_text_bg_color_checked_state</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">18dp</item>
    </style>
<style name="SpinnerTheme">
    <item name="fontFamily">@font/montserrat</item>
</style>
</resources>
